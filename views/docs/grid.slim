article.article
  h1.article-heading
    | Grid
  p
    | The Grid component is used for grid layouts.
  .article-section
    .article-section-heading
      | @mixin column($rate)
    .grid
      .grid-columns
        .grid-column-1-4
          | column(1/4)
        .grid-column-3-4
          | column(3/4)
      .grid-columns
        .grid-column-1-3
          | column(1/3)
        .grid-column-2-3
          | column(2/3)
      .grid-columns
        .grid-column-1-2
          | column(1/2)
        .grid-column-1-2
          | column(1/2)
    .grid-example-code
      p
        pre
          code
            |
              .grid {
                &-column-1-2 {
                  @include column(1/2);
                }

                &-column-1-4 {
                  @include column(1/4);
                }

                &-column-1-3 {
                  @include column(1/3);
                }

                &-column-2-3 {
                  @include column(2/3);
                }

                &-column-3-4 {
                  @include column(3/4);
                }

                &-columns {
                  @include columns;
                }
              }
